{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "outDir": "build",
    "rootDir": "src",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "lib": ["es6"],
    "baseUrl": "./src",  // Define a pasta base para os caminhos relativos
    "paths": {
      "@models/*": ["infrastructure/persistence/models/*"],
      "@repositories/*": ["infrastructure/frameworks/mongoose/repositories/*"],
      "@interfaces/*": ["domain/interfaces/*"],
      "@entities/*": ["domain/entities/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.json"]
}
